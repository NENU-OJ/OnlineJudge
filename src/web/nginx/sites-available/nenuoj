server {
    listen 80 default_server;
    listen [::]:80 default_server;

    charset utf-8;

    root /web;
    index index.php;
    server_name localhost;

    client_max_body_size 20M;

    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        include fastcgi.conf;
        fastcgi_pass unix:/run/php/php7.0-fpm.sock;
    }
}
